<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".EditCustomerActivity">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

        <ImageView
            android:id="@+id/editImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentStart="false"
            android:layout_alignParentTop="false"
            android:layout_below="@id/toolbar"
            app:srcCompat="@drawable/editimage" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/editImage">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <EditText
                    android:id="@+id/editName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="false"
                    android:layout_alignParentTop="false"
                    android:layout_margin="15dp"
                    android:layout_toRightOf="@id/nameImage"
                    android:hint="@string/hintName"
                    android:inputType="text"
                    />

                <EditText
                    android:id="@+id/editEmail"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="false"
                    android:layout_alignParentStart="false"
                    android:layout_marginBottom="174dp"
                    android:layout_below="@id/editName"
                    android:layout_toRightOf="@id/mailImage"
                    android:hint="@string/hintEmail"
                    android:layout_margin="15dp"
                    android:inputType="textEmailAddress" />

                <EditText
                    android:id="@+id/editDescription"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="false"
                    android:layout_alignParentStart="false"
                    android:layout_below="@id/editEmail"
                    android:layout_toRightOf="@id/descriptionImage"
                    android:layout_margin="15dp"
                    android:hint="@string/hintDescription"
                    android:inputType="text" />

                <EditText
                    android:id="@+id/editDeliveryAddress"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="false"
                    android:layout_alignParentStart="false"
                    android:layout_below="@id/editDescription"
                    android:layout_toRightOf="@id/addressImage"
                    android:layout_margin="15dp"
                    android:hint="@string/hintDeliveryAddress"
                    android:inputType="text" />

                <ImageView
                    android:id="@+id/nameImage"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="false"
                    android:layout_alignParentTop="false"
                    android:layout_alignTop="@id/editName"
                    android:layout_marginLeft="35dp"
                    app:srcCompat="@drawable/account_name" />

                <ImageView
                    android:id="@+id/mailImage"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="false"
                    android:layout_alignParentTop="false"
                    android:layout_alignTop="@id/editEmail"
                    android:layout_marginLeft="35dp"
                    app:srcCompat="@drawable/mail" />

                <ImageView
                    android:id="@+id/descriptionImage"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="false"
                    android:layout_alignParentTop="false"
                    android:layout_alignTop="@id/editDescription"
                    android:layout_marginLeft="35dp"
                    app:srcCompat="@drawable/description" />

                <ImageView
                    android:id="@+id/addressImage"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="false"
                    android:layout_alignParentTop="false"
                    android:layout_alignTop="@id/editDeliveryAddress"
                    android:layout_marginLeft="35dp"
                    app:srcCompat="@drawable/location" />

            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>