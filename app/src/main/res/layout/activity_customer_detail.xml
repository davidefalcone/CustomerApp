<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CustomerDetailActivity">

    <ImageView
        android:id="@+id/customerImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/textName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="false"
        android:layout_below="@id/customerImage"
        android:layout_centerHorizontal="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:layout_margin="15dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/textEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="false"
        android:layout_marginLeft="60dp"
        android:layout_below="@id/textName"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:text="TextView" />

    <TextView
        android:id="@+id/textDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="false"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="15dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_below="@id/textEmail"
        android:text="TextView" />

    <TextView
        android:id="@+id/textDeliveryAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="false"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="15dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_below="@id/textDescription"
        android:text="TextView" />

    <ImageView
        android:id="@+id/mailImage"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="false"
        android:layout_alignTop="@id/textEmail"
        android:layout_marginLeft="35dp"
        app:srcCompat="@drawable/mail" />

    <ImageView
        android:id="@+id/descriptionImage"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="false"
        android:layout_alignTop="@id/textDescription"
        android:layout_marginLeft="35dp"
        app:srcCompat="@drawable/description" />

    <ImageView
        android:id="@+id/addressImage"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="false"
        android:layout_alignTop="@id/textDeliveryAddress"
        android:layout_marginLeft="35dp"
        app:srcCompat="@drawable/location" />


</RelativeLayout>